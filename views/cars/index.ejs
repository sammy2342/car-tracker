<%- include('../partials/header') %> 
<link rel='stylesheet' href='/stylesheets/index.css' />

<div class="title">
    <h1>All Cars</h1>
</div>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Model</th>
            <th>Year</th>
            <th>Price</th>
            <th>Mileage</th>
            <th>Details</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>

        <% cars.forEach( function(c) { %> 
        <tr>
            <td><%= c.name %> </td>
            <td><%= c.model %> </td>
            <td><%= c.year//.toLocaleDateString() %></td> 
            <td><%= c.price %> </td>
            <td><%= c.mileage %> </td>
            <td class="details"><a href="/cars/<%= c._id %> ">Details</a></td>
            <td> <form action="/cars/<%= c._id %>?_method=DELETE" method="POST">
                <button type="submit">Delete Car</button>
            </form> </td>
        </tr>
        <% }) %> 
    </tbody>
</table>


<%- include('../partials/footer') %> 